{
  "name": "CAERS_Session",
  "n_gpu": 1,
  "arch": {
    "type": "CAERSNet",
    "args": {
      "num_classes": 7,
      "face_model_path": "/kaggle/working/FER_trained_model.pt",
      "body_backbone": "swin_t",
      "context_backbone": "resnet50_places",
      "freeze_backbones": true,
      "attention": false
    }
  },
  "loss": "cross_entropy",
  "metrics": [
    "accuracy"
  ],
  "test_loader": {
    "type": "CAERSDataLoader",
    "args": {
      "root": "/kaggle/input/caer-s/CAER-S/test",
      "detect_file": "/kaggle/working/test_with_body.txt",
      "train": false,
      "batch_size": 64,
      "shuffle": false,
      "num_workers": 2
    }
  },
  "train_loader": {
    "type": "CAERSDataLoader",
    "args": {
      "root": "/kaggle/input/caer-s/CAER-S/train",
      "detect_file": "/kaggle/working/train_with_body.txt",
      "batch_size": 64,
      "shuffle": true,
      "num_workers": 2
    }
  },
  "val_loader": {
    "type": "CAERSDataLoader",
    "args": {
      "root": "/kaggle/input/caer-s/CAER-S/test",
      "detect_file": "/kaggle/working/val_with_body.txt",
      "train": false,
      "batch_size": 64,
      "shuffle": false,
      "num_workers": 2
    }
  },
  "optimizer": {
      "type": "AdamW",
      "args": {
        "lr": 0.001,
        "weight_decay": 0.01,
        "betas": [0.9, 0.999]
      }
  },
  "lr_scheduler": {  
    "type": "StepLR",
    "args": {
      "step_size": 10,
      "gamma": 0.1
    }
  },
  "trainer": {
    "epochs": 50,
    "save_dir": "saved/",
    "save_period": 5,
    "verbosity": 2,
    "monitor": "max val_accuracy",
    "early_stop": 5,
    "tensorboard": false
  }
}
